@page
@model FictionalCustomers.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Employee.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class="col-sm-2">
            Skill Level
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.SkillLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>
        <dt class="col-sm-2">
            Assigned Project/s
        </dt>
        <dd class="col-sm-10">
                @if(Model.Employee.Projects.Count() == 1)
                {
                    @Model.Employee.Projects.First().ProjectName
                }
                else
                    {
                    @foreach(var Project in Model.Employee.Projects)
                    {
                        if (Project != Model.Employee.Projects.Last())
                        {
                            @(Project.ProjectName + ", ")
                        }
                        else
                        {
                            @Project.ProjectName
                        }
                    }
                }
        </dd>
        <dt class="col-sm-2">
            User Role
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.UserRole)
        </dd>
        <dt class="col-sm-2">
            Employment Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmploymentStatus)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
