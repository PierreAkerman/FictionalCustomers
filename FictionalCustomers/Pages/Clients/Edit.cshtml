@page
@model FictionalCustomers.Pages.Clients.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.ClientCompany.CompanyName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClientCompany.Id" />
            <div class="form-group">
                <label asp-for="ClientCompany.CompanyName" class="control-label">Company Name</label>
                <input asp-for="ClientCompany.CompanyName" class="form-control" />
                <span asp-validation-for="ClientCompany.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientCompany.ContactPerson" class="control-label">ContactPerson</label>
                <input asp-for="ClientCompany.ContactPerson" class="form-control" />
                <span asp-validation-for="ClientCompany.ContactPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientCompany.Email" class="control-label"></label>
                <input asp-for="ClientCompany.Email" class="form-control" />
                <span asp-validation-for="ClientCompany.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
